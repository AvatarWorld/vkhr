# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  vkhr_config = debug
endif
ifeq ($(config),release)
  vkhr_config = release
endif

PROJECTS := vkhr

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

vkhr:
ifneq (,$(vkhr_config))
	@echo "==== Building vkhr ($(vkhr_config)) ===="
	@${MAKE} --no-print-directory -C . -f vkhr.make config=$(vkhr_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f vkhr.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   vkhr"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"